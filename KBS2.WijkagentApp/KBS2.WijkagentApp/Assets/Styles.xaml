<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="BluePolice">#004682</Color>
    <Color x:Key="SandPolice">#be965a</Color>

    <Thickness x:Key="MarginLeftRight" Left="16" Right="16" />
    <Thickness x:Key="MarginLeftRightTop" Left="16" Right="16" Top="8" />

    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#2196F3"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="TextColor" Value="#000000"/>
        <Setter Property="Image" Value="map_locator_med.png"/>
    </Style>
    
    <Style x:Key="Title" TargetType="Label">
        <Setter Property="FontSize" Value="Medium" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="BlueButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource BluePolice}"/>
        <Setter Property="TextColor" Value="#fff"/>
    </Style>
    
</ResourceDictionary>