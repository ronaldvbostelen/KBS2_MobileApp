<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="BluePolice">#004682</Color>
    <Color x:Key="SandPolice">#be965a</Color>

    <Thickness x:Key="MarginLeftRight" Left="16" Right="16" />
    <Thickness x:Key="MarginLeftRightTop" Left="16" Right="16" Top="8" />

    <Style x:Key="Title" TargetType="Label">
        <Setter Property="FontSize" Value="Medium" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="BlueButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource BluePolice}"/>
        <Setter Property="TextColor" Value="#fff"/>
        <Setter Property="Padding" Value="5,0,5,0"/>
        <Setter Property="Margin" Value="0, 0, 0, 5"/>
    </Style>

    <Style x:Key="SmallInfoLabel" TargetType="Label">
        <Setter Property="Margin" Value="4, 0, 0, -10"/>
        <Setter Property="FontSize" Value="9"/>
    </Style>

    <Style x:Key="MinimalStack" TargetType="StackLayout">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Spacing" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

</ResourceDictionary>